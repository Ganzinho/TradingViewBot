{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run App",
            "type": "shell",
            "command": "python3 app.py",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Ngrok",
            "type": "shell",
            "command": "ngrok http http://127.0.0.1:5000/",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            }

        }
    ]
}